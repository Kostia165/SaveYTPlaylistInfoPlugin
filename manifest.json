{
  "manifest_version": 3,
  "version": "0.0.3",
  "name": "YouTube Playlist Info",
  "description": "A WEB extension that saves short info about playlist.",
  "author": "Kostya Vashchenko",
  "homepage_url":  "https://github.com/Kostia165/SaveYTPlaylistInfoPlugin.git",
  "content_scripts": [
		{
			"matches": ["*://*.youtube.com/playlist*","*://*.youtube.com/*"],
    	"js": ["youtubePlaylistInfo.js"],
      "run_at": "document_end"
		}
	],
  "icons":{
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
